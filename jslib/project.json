{
  "name": "jslib",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "jslib/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "outputs": [
        "{projectRoot}/{options.outDir}",
        "{workspaceRoot}/dist/jslib"
      ],
      "defaultConfiguration": "production",
      "options": {
        "outDir": "../dist/jslib"
      },
      "configurations": {
        "development": {
          "mode": "development",
          "config": "./vite.config.dev.ts"
        },
        "production": {
          "mode": "production",
          "config": "./vite.config.prod.ts"
        }
      }
    },
    "test": {
      "outputs": [
        "{projectRoot}/{options.coverage.reportsDirectory}",
        "{workspaceRoot}/coverage/jslib"
      ],
      "options": {
        "watch": true,
        "config": "./vite.config.dev.ts",
        "coverage.reportsDirectory": "../coverage/jslib",
        "testNamePattern": "\"/(jslib\\.spec.ts)/\""
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
