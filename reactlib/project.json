{
  "name": "reactlib",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "reactlib/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "build": {
      "outputs": [
        "{projectRoot}/{options.outDir}",
        "{workspaceRoot}/dist/reactlib"
      ],
      "defaultConfiguration": "production",
      "options": {
        "outDir": "../dist/reactlib"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "test": {
      "outputs": [
        "{projectRoot}/{options.coverage.reportsDirectory}",
        "{workspaceRoot}/coverage/reactlib"
      ],
      "options": {
        "coverage.reportsDirectory": "../coverage/reactlib"
      }
    }
  }
}
